<% content_for :meta_title, "#{@post.title} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @post.body %>
<%# <% content_for :meta_image, cl_image_path(@offer.photo.path) %>

<div class='page-width'>
    <div class='show-content'>
        <h2> <%= link_to @post.title, post_path(@post) %></h2> 
            <small><%= @post.date %> </small>
            <p> <%= sanitize @post.body %> </p>
            <% if current_user == @post.user %>
            <%= link_to 'Edit Post', edit_post_path(@post) %>
            <% end %>
            <h3>Comments (<%= @post.comments.size %>)</h3>
            <%= simple_form_for([@post, @comment]) do |f| %>
                <p><%= f.input :description, label: 'Comment' %></p> 
                <%= f.button :submit, label: 'Submit', class: 'btn btn-primary', style: 'margin-top: 10px'%>
            <% end %>
            
            <% @post.comments.reverse.each do |comment| %>
                <h5><%= comment.author %><small> posted <%= distance_of_time_in_words(Time.now, comment.created_at)%> ago</small></h5>
                <p><%= comment.description %></p>
            <% end %>
    </div>
