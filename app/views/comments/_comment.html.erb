<style>
  #new_comment.simple_form.form-inline{
    margin: 5px 0 0 45px;
  }
</style>
  
  <p style='font-weight: bold; margin: 0'><%= cl_image_tag @comment.avatar, height: 30, width: 30, style: 'border-radius: 50%', crop: :fill %> <%= comment.author %> - <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small></p>
  <p style='margin: 0 0 0 45px;'><%= comment.description %></p>

  
  <%= simple_form_for([comment, Comment.new], html: {class: 'form-inline' } ) do |f| %>
      <%= f.input :description, placeholder: "Add a Reply", label: false, input_html: { style: 'border-radius: 5px; border: 0.5px solid rgb(216, 216, 216)' } %><br/>
      <%= f.submit "Reply", style: 'border-radius: 5px'  %>
      <% end %>
  

    <div class='render' style='margin: 25px 0px 0px 45px'>
      <%= render partial: 'comments/comment', collection: comment.comments.reverse %>
    </div>
  
